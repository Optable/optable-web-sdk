{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "incremental": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "target": "esnext"
  },
  "includes": ["src"]
}
